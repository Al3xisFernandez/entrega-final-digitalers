<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">Account register</div>
      <img
        src="https://st1.u-tad.com/media/2017/07/hacker-etico-cibercriminal.jpg"
        class="rounded-circle mx-auto d-block m-4 logo"
      />
      <div class="card-body">
        <form action="/users/signup" method="POST">
          <div class="form-group">
            <input
              type="text"
              class="form-control"
              name="name"
              placeholder="name"
              value="{{name}}"
            />
          </div>
          <div class="form-group">
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="email"
              value="{{email}}"
            />
          </div>
          <div class="form-group">
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="password"
              value="{{password}}"
            />
          </div>
          <div class="form-group">
            <input
              type="password"
              class="form-control"
              name="confirm_password"
              placeholder="confirm password"
              value="{{confirm_password}}"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Register
          </button>
        </form>
      </div>
    </div>
  </div>
</div>