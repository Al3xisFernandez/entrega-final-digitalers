<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">Account login</div>
      <div class="card-body">
        <form action="/users/signin" method="POST">
          <div class="form-group">
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="email"
            />
          </div>
          <div class="form-group">
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Signin
          </button>
            <a href="/users/signup">Register</a>
        </form>
      </div>
    </div>
  </div>
</div>